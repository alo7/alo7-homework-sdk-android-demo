<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/et_teacher_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入teacher token" />

        <EditText
            android:id="@+id/et_student_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="请输入student token" />

        <EditText
            android:id="@+id/et_homework_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="请输入homeworkId" />

        <Button
            android:id="@+id/btn_assign_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="assignHomework"
            android:text="@string/assign_homework" />

        <Button
            android:id="@+id/btn_check_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="checkHomework"
            android:text="@string/check_homework" />

        <Button
            android:id="@+id/btn_do_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="doHomework"
            android:text="@string/do_homework" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
